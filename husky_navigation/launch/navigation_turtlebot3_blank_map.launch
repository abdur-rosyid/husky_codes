<launch>
  <!-- Arguments -->
  <!-- <arg name="map_file" default="$(find husky_navigation)/maps/blank_map_86_55.yaml"/> -->
  <arg name="map_file" default="$(find husky_navigation)/maps/practice_arena_map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find husky_navigation)/launch/amcl_turtlebot3.launch"/> 

  <!-- move_base -->
  <include file="$(find husky_navigation)/launch/move_base_turtlebot3.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find husky_viz)/rviz/navigation_turtlebot3.rviz"/>
  </group>
</launch>
